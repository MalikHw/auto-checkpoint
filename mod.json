{
    "geode": "4.10.2",
    "gd": {
        "win": "2.2074",
        "android": "2.2074"
    },
    "id": "MalikHw47.auto-checkpoint",
    "name": "Auto Checkpoint",
    "version": "v1.0.0",
    "developer": "MalikHw47",
    "description": "Automatically places checkpoints at regular intervals while playing",
    "settings": {
        "interval": {
            "name": "Checkpoint Interval",
            "description": "Place a checkpoint every X seconds",
            "type": "float",
            "default": 5.0,
            "min": 1.0,
            "max": 30.0,
            "control": {
                "slider": true,
                "arrows": true,
                "arrow-step": 0.5,
                "slider-step": 0.5,
                "input": true
            }
        },
        "enabled": {
            "name": "Enable Auto-Checkpoint",
            "description": "Toggle automatic checkpoint placement on/off",
            "type": "bool",
            "default": true
        },
        "practice-mode-only": {
            "name": "Practice Mode Only",
            "description": "Only place checkpoints in practice mode",
            "type": "bool",
            "default": true
        }
    },
    "tags": ["gameplay", "utility", "enhancement"]
}
